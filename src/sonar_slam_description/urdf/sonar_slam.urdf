<?xml version="1.0"?>
<robot name="sonar_slam" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="box_inertia" params="m l w h xyz rpy">
        <inertial>
            <origin xyz="${xyz}" rpy="${rpy}" />
            <mass value="${m}" />
            <inertia ixx="${(m/12) * (h*h + l*l)}" ixy="0" ixz="0"
                     iyy="${(m/12) * (w*w + l*l)}" iyz="0"
                     izz="${(m/12) * (w*w + h*h)}" />
        </inertial>
    </xacro:macro>

    <xacro:macro name="cylinder_inertia" params="m r h xyz rpy">
        <inertial>
            <origin xyz="${xyz}" rpy="${rpy}" />
            <mass value="${m}" />
            <inertia ixx="${(m/12) * (3*r*r + h*h)}" ixy="0" ixz="0"
                     iyy="${(m/12) * (3*r*r + h*h)}" iyz="0"
                     izz="${(m/2) * (r*r)}" />
        </inertial>
    </xacro:macro>

    <xacro:macro name="sphere_inertia" params="m r xyz rpy">
        <inertial>
            <origin xyz="${xyz}" rpy="${rpy}" />
            <mass value="${m}" />
            <inertia ixx="${(2/5) * m * r * r}" ixy="0" ixz="0"
                     iyy="${(2/5) * m * r * r}" iyz="0"
                     izz="${(2/5) * m * r * r}" />
        </inertial>
    </xacro:macro>


    <link name="Base_footprint">
    </link>
    
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.2 0.22 0.004" />
            </geometry>
            <origin xyz="0 0 0.002" rpy="0 0 0" />
        </visual>
        <collision>
            <geometry>
                <box size="0.2 0.22 0.004" />
            </geometry>
            <origin xyz="0 0 0.002" rpy="0 0 0" />
        </collision>
        <xacro:box_inertia m="0.1" l="0.2" w="0.22" h="0.004"
                           xyz="0 0 0.002" rpy="0 0 0" />
    </link>

    <link name="Battery">
        <visual>
            <geometry>
                <box size="0.15 0.05 0.04" />
            </geometry>
            <origin xyz="0 0 0.02" rpy="0 0 0" />
        </visual>
        <collision>
            <geometry>
                <box size="0.15 0.05 0.04" />
            </geometry>
            <origin xyz="0 0 0.02" rpy="0 0 0" />
        </collision>
        <xacro:box_inertia m="0.4" l="0.15" w="0.05" h="0.04"
                           xyz="0 0 0.02" rpy="0 0 0" />
    </link>

    <link name="Servo">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.05" />
            </geometry>
            <origin xyz="0 0 0.025" rpy="0 0 0" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.01" length="0.05" />
            </geometry>
            <origin xyz="0 0 0.025" rpy="0 0 0" />
        </collision>
        <xacro:cylinder_inertia m="0.08" r="0.01" h="0.05"
                                xyz="0 0 0.025" rpy="0 0 0" />
    </link>

    <link name="Right_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.01" />
            </geometry>
            <origin xyz="0 -0.005 0" rpy="1.571 0 0" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.01" />
            </geometry>
            <origin xyz="0 -0.005 0" rpy="1.571 0 0" />
        </collision>
        <xacro:cylinder_inertia m="0.4" r="0.03" h="0.01"
                                xyz="0 -0.005 0" rpy="1.571 0 0" />
    </link>

    <link name="Left_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.01" />
            </geometry>
            <origin xyz="0 0.005 0" rpy="1.571 0 0" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.01" />
            </geometry>
            <origin xyz="0 0.005 0" rpy="1.571 0 0" />
        </collision>
        <xacro:cylinder_inertia m="0.4" r="0.03" h="0.01"
                                xyz="0 0.005 0" rpy="1.571 0 0" />
    </link>

    <link name="Right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.01" />
            </geometry>
            <origin xyz="0 -0.005 0" rpy="1.571 0 0" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.01" />
            </geometry>
            <origin xyz="0 -0.005 0" rpy="1.571 0 0" />
        </collision>
        <xacro:cylinder_inertia m="0.4" r="0.03" h="0.01"
                                xyz="0 -0.005 0" rpy="1.571 0 0" />
    </link>

    <link name="Left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.01" />
            </geometry>
            <origin xyz="0 0.005 0" rpy="1.571 0 0" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.01" />
            </geometry>
            <origin xyz="0 0.005 0" rpy="1.571 0 0" />
        </collision>
        <xacro:cylinder_inertia m="0.4" r="0.03" h="0.01"
                                xyz="0 0.005 0" rpy="1.571 0 0" />
    </link>


    <joint name="base_footprint_base_link_joint" type="fixed">
        <parent link="Base_footprint" />
        <child link="base_link" />
        <origin xyz="0 0 0.03" rpy="0 0 0" />
    </joint>
        
    <joint name="base_battery_joint" type="fixed">
        <parent link="base_link" />
        <child link="Battery" />
        <origin xyz="0 0 0.004" rpy="0 0 0" />
    </joint>

    <joint name="battery_servo_joint" type="fixed">
        <parent link="Battery" />
        <child link="Servo" />
        <origin xyz="0 0 0.04" rpy="0 0 0" />
    </joint>

    <joint name="right_back_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="Right_back_wheel" />
        <origin xyz="-0.07 -0.11 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="left_back_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="Left_back_wheel" />
        <origin xyz="-0.07 0.11 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="right_front_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="Right_front_wheel" />
        <origin xyz="0.07 -0.11 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="left_front_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="Left_front_wheel" />
        <origin xyz="0.07 0.11 0" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <link name="sonar_sensor">
        <visual>
            <geometry>
                <box size="0.015 0.045 0.025" />
            </geometry>
            <origin xyz="0 0 0.0125" rpy="0 0 0" />
        </visual>
        <collision>
            <geometry>
                <box size="0.015 0.045 0.025" />
            </geometry>
            <origin xyz="0 0 0.0125" rpy="0 0 0" />
        </collision>
        <xacro:box_inertia m="0.02" l="0.03" w="0.09" h="0.05"
                           xyz="0 0 0.0125" rpy="0 0 0" />
    </link>

    <joint name="sonar_joint" type="fixed">
        <parent link="Servo" />
        <child link="sonar_sensor" />
        <origin xyz="0 0 0.05" rpy="0 0 0" />
    </joint>


    <gazebo reference="sonar_sensor">
        <plugin>
            <!-- input -->
            <command_topic>cmd_vel</command_topic>

            <!-- output -->
            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>true</publish_wheel_tf>

            <odometry_topic>odom</odometry_topic>
            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>Base_footprint</robot_base_frame>
        </plugin>
        <sensor name="sonar" type="ray">
            <always_on>true</always_on>
        
            <pose>0 0 0 0 0 0</pose>
            <update_rate>10</update_rate>
            <visualize>true</visualize>
            <ray>
                <scan>
                    <horizontal>
                        <samples>1</samples>
                        <resolution>1</resolution>
                        <min_angle>0</min_angle>
                        <max_angle>0</max_angle>
                    </horizontal>
                    <vertical>
                        <samples>1</samples>
                        <resolutions>1</resolutions>
                        <min_angle>-0.262</min_angle>
                        <max_angle>0.262</max_angle>
                    </vertical>
                </scan>
                <range>
                    <min>0.1</min>
                    <max>10</max>
                    <resolution>0.01</resolution>
                </range>
            </ray>
            <plugin name="sonar_controller" filename="libgazebo_ros_sonar.so">
                <ros>
                    <remapping>~/out:=sonar_data</remapping>
                </ros>
                <frame_name>sonar_sensor</frame_name>
            </plugin>
        </sensor>
    </gazebo>

    <gazebo>
        <plugin name="motor_driver" filename="libgazebo_ros_diff_drive.so">
            <update_rate>50</update_rate>

            <left_joint>left_back_wheel_joint</left_joint>
            <right_joint>right_back_wheel_joint</right_joint>

            <wheel_separation>0.23</wheel_separation>
            <wheel_diameter>0.06</wheel_diameter>

            <command_topic>cmd_vel</command_topic>

            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>true</publish_wheel_tf>

            <odometry_topic>odom</odometry_topic>
            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>Base_footprint</robot_base_frame>
        </plugin>
    </gazebo>
</robot>
